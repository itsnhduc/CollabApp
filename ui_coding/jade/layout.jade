    block script
    script.
      $(document).ready(function(){
        $(".conversation").hide();
        $(".messenger-head-in-chat").hide();
        $(".messenger-head-new").hide();
        $("#messenger").hide();

        $(".messenger-btn").click(function(){
          $(".messenger-btn").hide();
          $("#messenger").show();
        })
        $(".minimize-btn").click(function(){
          $("#messenger").hide();
          $(".messenger-btn").show();
        })
        $(".messenger-chat-list").click(function(){
          $(".messenger-head").hide();
          $(".messenger-body").hide();
          $(".messenger-footer").hide();
          $(".messenger-head-new").hide();
          $(".messenger-head-in-chat").show();
          $(".conversation").show();
          $(".messages").show();
          var scroll = $('.messages');
          var height = scroll[0].scrollHeight;
          scroll.scrollTop(height);
        })
        $(".back-btn").click(function(){
          $(".messenger-head-in-chat").hide();
          $(".conversation").hide();
          $(".messenger-head-new").hide();
          $(".messenger-head").show();
          $(".messenger-body").show();
          $(".messenger-footer").show();
        })

        $(".new-btn").click(function(){
          $(".messenger-head").hide();
          $(".messenger-body").hide();
          $(".messenger-footer").hide();
          $(".messenger-head-new").show();
          $(".conversation").show();
          $(".messages").hide();
        })

      })
