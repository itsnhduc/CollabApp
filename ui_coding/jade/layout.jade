doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    // Bootstrap
    link(href='css/bootstrap_paper.css', rel='stylesheet')
    link(href='css/custom.css', rel='stylesheet')
    block link
    
    block title
      title CollabApp
    
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  
  body
    nav#navigation.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='index.html') CollabApp
        .navbar-collapse.collapse
          block navbar-link
            ul.nav.navbar-nav
              li
                a(href='explore.html') Brainstorm
              li
                a(href='explore.html') Projects
              li
                a(href='community.html') Community
              li
                a(href='help.html') Help
          ul.nav.navbar-nav.navbar-right
            li
              a(data-toggle="modal", data-target="#login") Login
            li
              a(data-toggle="modal", data-target="#register") Register

    .modal.fade#login(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4.text-center.modal-title Welcome back!
          .modal-body
            form
              .form-group
                input.center-block.login-modal-element-1(type="email", placeholder="Email")
              .form-group
                input.center-block.login-modal-element-1(type="password", placeholder="Password")
              button.btn.btn-default.center-block.login-modal-element-2 Login
              h6.text-center
                a.text-muted Forgot Password?
            .container-fluid
              .btn.btn-danger.login-modal-login-with Log in with Google+ <img src="img/google_plus_logo.png", width="20px"></img>
              .btn.btn-primary.login-modal-login-with Log in with Facebook <img src="img/facebook_logo.png", width="20px"></img>

    .modal.fade#register(tabindex='-1', role='dialog')
      .modal-dialog(role='document')
        .modal-content
          .modal-body
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h4.text-center Join the revolution now!!!
            .container-fluid(style="border-bottom: 3px solid #d3d3d3; padding-bottom: 5px;")
              .btn.btn-danger.login-modal-login-with Sign up with Google+ <img src="img/google_plus_logo.png", width="20px"></img>
              .btn.btn-primary.login-modal-login-with Sign up with Facebook <img src="img/facebook_logo.png", width="20px"></img>
            h4.text-center OR
            form
              .form-group
                input.center-block.login-modal-element-1(type="text", placeholder="Username")
              .form-group
                input.center-block.login-modal-element-1(type="email", placeholder="Email")
              .form-group
                input.center-block.login-modal-element-1(type="password", placeholder="Password")
              button.btn.btn-default.center-block.login-modal-element-2 Sign up

    block body-content
      h1 Hello, world!

    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='js/bootstrap_3.36_min.js')
    block script

    block footer
      footer.container-fluid#footer
        .col-md-2
        .col-md-4
          h5 CollabApp Logo
          h6 All rights reserved &#169;
        .col-md-4.bottom-align-text
          h6 School of Mechanical And Aerospace Engineering<br>Nanyang Technological University, Singapore
        .col-md-2